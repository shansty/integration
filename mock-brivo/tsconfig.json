{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["node"],
    "resolveJsonModule": true,
    "moduleDetection": "force",

    "noEmit": true
  },
  "include": ["src/**/*.ts"]
}
